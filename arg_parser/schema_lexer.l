%{
#include "arg_parser.h"
#include "schema_parser.tab.h" // Generated by Bison
%}

%option noyywrap

%%

[a-zA-Z]    { yylval.name = yytext[0]; return T_OPTION_NAME; }
"#"         { return T_INT_TYPE; }
"*"         { return T_STRING_TYPE; }
","         { return T_COMMA; }
[ \t\n]+    { /* Ignore whitespace */ }
.           { fprintf(stderr, "Lexer Error: Unknown character '%c'\n", yytext[0]); }

